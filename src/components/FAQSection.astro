---
interface FAQ {
  question: string;
  answer: string;
}

interface Props {
  faqs: FAQ[];
  heading?: string;
}

const { faqs, heading = 'Frequently Asked Questions' } = Astro.props;

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.answer,
    },
  })),
};
---

<script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />

<div class="space-y-4">
  <h3 class="font-headline text-2xl font-bold text-navy">{heading}</h3>
  <div class="mt-6 space-y-4">
    {faqs.map((faq, i) => (
      <details class="group bg-light rounded-xl border border-gray-100 overflow-hidden">
        <summary class="flex items-center justify-between cursor-pointer px-6 py-4 font-medium text-navy hover:text-orange transition-colors min-h-[44px] list-none [&::-webkit-details-marker]:hidden">
          <span>{faq.question}</span>
          <svg class="w-5 h-5 text-muted flex-shrink-0 ml-4 transition-transform group-open:rotate-180" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="m19.5 8.25-7.5 7.5-7.5-7.5" />
          </svg>
        </summary>
        <div class="px-6 pb-4 text-muted text-sm leading-relaxed">
          {faq.answer}
        </div>
      </details>
    ))}
  </div>
</div>
