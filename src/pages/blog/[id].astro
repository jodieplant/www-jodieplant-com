---
import Layout from '../../layouts/Layout.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    params: { id: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<Layout
  title={`${post.data.title} — Jodie Plant Marketing`}
  description={post.data.description}
>
  <article>
    <!-- HERO -->
    <section class="bg-navy text-white py-12 sm:py-16">
      <div class="max-w-container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl">
          <a href="/blog" class="text-sm text-white/50 hover:text-white/70 transition-colors mb-4 inline-block">&larr; Back to Blog</a>
          <h1 class="font-headline text-3xl sm:text-4xl lg:text-5xl font-extrabold leading-tight mt-2">
            {post.data.title}
          </h1>
          <div class="mt-6 flex items-center gap-4 text-sm text-white/60">
            <span>{post.data.author}</span>
            <span>&middot;</span>
            <time datetime={post.data.date}>
              {new Date(post.data.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
            </time>
          </div>
          {post.data.tags.length > 0 && (
            <div class="mt-4 flex gap-2">
              {post.data.tags.map(tag => (
                <span class="text-xs bg-white/10 text-white/70 px-2 py-1 rounded">{tag}</span>
              ))}
            </div>
          )}
        </div>
      </div>
    </section>

    <!-- CONTENT -->
    <section class="py-12 sm:py-16 bg-white">
      <div class="max-w-container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl prose prose-lg prose-slate prose-headings:font-headline prose-headings:text-navy prose-a:text-orange hover:prose-a:text-orange/80 prose-strong:text-navy">
          <Content />
        </div>
      </div>
    </section>

    <!-- POST CTA -->
    <section class="py-12 sm:py-16 bg-light">
      <div class="max-w-container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl bg-white rounded-xl p-8 border border-gray-100 text-center">
          <h2 class="font-headline text-2xl font-bold text-navy">Want help implementing this?</h2>
          <p class="mt-3 text-muted">
            Get a free visibility snapshot — I'll show you exactly where your marketing stands and what to do next.
          </p>
          <a href="/contact" class="mt-6 inline-flex items-center justify-center px-8 py-4 bg-orange text-white font-bold rounded-lg hover:bg-orange/90 transition-colors min-h-[44px]">
            Get Your Free Visibility Snapshot
          </a>
        </div>
      </div>
    </section>
  </article>
</Layout>
